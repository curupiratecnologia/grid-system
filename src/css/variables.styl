media_queries = {
  xs  : "only screen and (max-width: 576px)",
  sm  : "only screen and (min-width: 576px) and (max-width: 768px)",
  md : "only screen and (min-width: 768px) and (max-width: 992px), only print",
  lg : "only screen and (min-width: 992px) and (max-width: 1440px), only print",
  xlg : "only screen and (min-width: 1440px), only print",
  print : "only print",
}

for_device(breakpoints)
  conditions = ()
  for breakpoint in breakpoints
    push(conditions, media_queries[breakpoint])
  conditions = join(", ", conditions)
  @media conditions
    {block}

media_queries_min = {
  xs  : "only screen and (max-width: 576px)",
  sm  : "only screen and (min-width: 576px)",
  md : "only screen and (min-width: 768px), only print",
  lg : "only screen and (min-width: 992px), only print",
  xlg : "only screen and (min-width: 1440px), only print",
  print : "only print",
}

for_device_min(breakpoints)
  if(breakpoints)
    conditions = ()
    for breakpoint in breakpoints
      push(conditions, media_queries_min[breakpoint])
    conditions = join(", ", conditions)
    @media conditions
     {block}
  else
   {block}

